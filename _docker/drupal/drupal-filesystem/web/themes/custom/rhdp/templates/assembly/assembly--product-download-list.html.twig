<section{{ attributes.addClass('assembly') }}{{ audience_selection }}>
  <div class="product-versions row">
    <h2>All Downloads</h2>

    {% for version in elements.versions %}
      <div class="product-version">
        <h4 class="product-version__version-name">{{ version.versionName }}</h4>

        {# Adjust for 13-digit Unix timestamp #}
        {% set versionReleaseDate = version.releaseDate / 1000 %}

        <div class="product-version__files">
          {% for file in version.files %}
            <div class="product-version__file row">
              <div class="large-18 medium-16 small-24 columns">
                <div class="row">
                  <div class="large-8 small-24 columns file-label-wrapper">
                    <h5 class="product-version__file-label">{{ file.label }}</h5>
                  </div>
                  <div class="large-11 small-24 columns">
                    <p class="product-version__file-description">{{ file.description }}</p>
                  </div>
                  <div class="large-5 small-24 columns">
                    <span class="product-version__release-date-header">
                      <span class="fa fa-calendar-alt"></span> Release Date
                    </span>
                    <span class="product-version__release-date">{{ versionReleaseDate|date("F d, Y") }}</span>
                  </div>
                </div>
              </div>
              <div class="large-6 medium-8 small-24 columns">
                <a class="production-version__file-button button medium-cta blue" href="{{ file.url }}">
                  <span class="fa fa-download"></span> Download
                  <span class="file-size">{{ file.fileSize }}</span>
                </a>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>
